#!/usr/bin/env zsh


denConf vars.zsh

VIS_BIN="$HOME/bin/viss"
CONF_FILE="$DEN/etc/vis/${DEN_THEME}"

y="$1"

if [ -z "$y" ]; then
	printf '(s|v) '
	read -s -k -r y
fi

case "$y" in
	s)
		echo -en "\033]0;spt-term\a"
		spt
		;;

	v)
		echo -en "\033]0;viss\a"
		sleep 1
		echo -en "\033]0;viss-term\a"
		$VIS_BIN -c "$CONF_FILE"
		;;
	*)
		exit
		;;
esac
